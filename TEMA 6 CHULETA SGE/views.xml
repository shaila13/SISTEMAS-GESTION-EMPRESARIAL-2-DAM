  <!-- Vista árbol para categoría -->
<odoo>
  <data>
    <record model="ir.ui.view" id="libreria.categoria_tree">
      <field name="name">libreria.categoria.tree</field>
      <field name="model">libreria.categoria</field>    <!--Modelo sobre el que tiramos -->
      <field name="arch" type="xml">
        <tree>
          <field name="name"/> <!--Vamos a models y models.py ponemos los campos-->
          <field name="descripcion"/>

        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.categoria_form">
      <field name="name">libreria.categoria.form</field>
      <field name="model">libreria.categoria</field>    <!--Modelo sobre el que tiramos -->
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
              <field name="name"/> <!--Vamos a models y models.py ponemos los campos-->
              <field name="descripcion"/>
          </group>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="libreria.libro_tree">
      <field name="name">Libros</field>
      <field name="model">libreria.libro</field>    <!--Modelo sobre el que tiramos -->
      <field name="arch" type="xml">
        <tree>
          <field name="name"/> <!--Vamos a models y models.py ponemos los campos-->
          <field name="precio"/>
          <field name="ejemplares"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="libreria.libro_form">
      <field name="name">Libros</field>
      <field name="model">libreria.libro</field>    <!--Modelo sobre el que tiramos -->
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/> <!--Vamos a models y models.py ponemos los campos-->
            <field name="precio"/>
            <field name="ejemplares"/>
            <field name="fecha"/> <!--Vamos a models y models.py ponemos los campos-->
            <field name="segmano"/>
            <field name="descripcion"/>
            <field name="estado"/>
          </group>
        </form>
      </field>
    </record>


    <!-- ACCION VENTANA  -->
    <!-- Tendremos dos una para categoria y otra para libro -->
    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Categorias</field>
      <field name="res_model">libreria.categoria</field>
      <field name="view_mode">tree,form</field>    <!-- A Las vista que tenemos en ese orden de aparición  -->
    </record>
    <record model="ir.actions.act_window" id="libreria.libro_action_window">
      <field name="name">Libros</field>
      <field name="res_model">libreria.libro</field>
      <field name="view_mode">tree,form</field>    <!-- A Las vista que tenemos en ese orden de aparición  -->
    </record>


