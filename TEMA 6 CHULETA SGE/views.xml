Solo buscamos por Char o text

    <record model="ir.ui.view" id="libreria.categoria_search">
      <field name="name">Libros</field>
      <field name="model">libreria.libro</field>    <!--Modelo sobre el que tiramos -->
      <field name="arch" type="xml">
        <search>
          <field name="name"/> <!--Campos por los que buscar-->
          <field name="descripcion"/>
          <filter name="baratos" dominio="[('precio','&lt;=',5)]"/>
        </search>
      </field>

